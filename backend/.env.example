# Server
PORT=3001
NODE_ENV=development

# OpenStreetMap Overpass API
OVERPASS_API_URL=https://overpass-api.de/api/interpreter
OVERPASS_TIMEOUT_MS=25000
OVERPASS_RATE_LIMIT_MS=1000

# Caching (seconds)
CACHE_STORE_TTL=86400    # 24 hours
CACHE_PRICE_TTL=14400    # 4 hours

# Rate Limiting (milliseconds between requests)
WALMART_RATE_LIMIT_MS=3000
TARGET_RATE_LIMIT_MS=3000

# Features (enable/disable providers)
ENABLE_WALMART_SCRAPER=true
ENABLE_TARGET_SCRAPER=true
ENABLE_MOCK_PROVIDER=true

# Scraping
USER_AGENT=GroceryPriceFinder/1.0 (Educational Project; contact@example.com)

# Mock Data Control
FORCE_MOCK_DATA=false  # Set to true to use mock data for all stores (demo mode)
